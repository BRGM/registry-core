<table class="table table-bordered table-condensed">
  <tbody>
  #foreach($user in $users)
    <tr>
      <td>
        <span title="$user.openid">$user.name</span>
      </td>
      <td>
        <form class="form-inline" action="/system/security/grant" method="post">
          <input type="hidden" name="grant" value="$grant" />
          <input type="hidden" name="user" value="$user.openid" />
          <input type="hidden" name="path" value="$uri" />
          <input type="submit" value="grant" class="btn" />
        </form>
      </td>
    </tr>
  #end
  </tbody>
</table>

<div class="space-above">
  <p>Hover over user name to see their OpenID. Click grant to allow that user $grant privileges on $uri.</p>
</div>