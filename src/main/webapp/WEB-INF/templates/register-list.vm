                </div>
                <div class="span2">
                  <strong>Label:</strong> $member.name
                </div>
                <div class="span2">
                  <strong>Type:</strong> #foreach($ty in $member.listPropertyValues("rdf:type"))#linkfor($ty)#if( $foreach.hasNext ), #end#end
                </div>
              #if(!$itemL.isEmpty())
